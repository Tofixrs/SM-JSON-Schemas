{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./characterSet.json",
  "title": "characterSet",
  "description": "",
  "type": "object",
  "properties": {
    "characters": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "renderables": {
            "type": "array",
            "items": {
              "$ref": "./smPath.json"
            }
          },
          "ragdoll": {
            "$ref": "./smPath.json"
          },
          "tumble": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "col": {
                "$ref": "./smPath.json"
              },
              "offset": {
                "type": "array",
                "items": {
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          },
          "hit": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "crouch": {
                "$ref": "./hit.json"
              },
              "stand": {
                "$ref": "./hit.json"
              }
            }
          },
          "unit": {
            "$ref": "./charSetScriptFormat.json"
          },
          "character": {
            "$ref": "./charSetScriptFormat.json"
          },
          "movement": {
            "type": "object",
            "properties": {
              "moveSpeed": { "type": "number" },
              "slowDownSpeed": { "type": "number" },
              "crouchSpeed": { "type": "number" },
              "sprintSpeed": { "type": "number" },
              "headingRotationSpeed": { "type": "number" },
              "facingRotationSpeed": { "type": "number" },
              "canSwim": { "type": "boolean" }
            }
          },
          "capsule": {
            "type": "object",
            "properties": {
              "radius": { "type": "number" },
              "height": { "type": "number" },
              "crouchHeight": { "type": "number" }
            }
          },
          "mass": { "type": "number" },
          "characterShapeUuid": {
            "type": "string",
            "format": "uuid"
          },
          "paint": {
            "enable": { "type": "boolean" },
            "defaultColor": {
              "$ref": "./hexColor.json"
            },
            "effect": {
              "$ref": "https://raw.githubusercontent/com/Tofixrs/SM-JSON-Schemas/master/effect.json"
            }
          },
          "sound": {
            "type": "object",
            "properties": {
              "movementSoundFrames": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "crouchedMovementSoundFrames": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./decalSet.json",
  "title": "decalSet",
  "description": "",
  "type": "object",
  "properties": {
    "difSheet": { "$ref": "./smPath.json" },
    "norSheet": { "$ref": "./smPath.json" },
    "agsSheet": { "$ref": "./smPath.json" },
    "decalSet": {
      "patternProperties": {
        "^.*$": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "region": { "type": "array", "items": { "type": "integer" } },
          "material": {
            "enum": [
              "Dif",
              "DifNor",
              "DifAgs",
              "DifNorAgs",
              "DifAgsNor",
              "NorAgs",
              "Ags"
            ]
          }
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./rend.json",
  "title": "Vec3",
  "description": "",
  "type": "object",
  "properties": {
    "lodList": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "maxViewDistance": { "type": "number" },
          "mesh": { "$ref": "./smPath.json" },
          "includes": {
            "type": "array",
            "items": {
              "enum": [
                "POSITION",
                "NORMAL",
                "UV0",
                "VERTEX_COLOR",
                "TANGENT",
                "UV1",
                "TANGENTS",
                "BLEND_INDICES",
                "BLEND_WEIGHTS"
              ]
            }
          },
          "subMeshList": {
            "type": "array",
            "items": {
              "$ref": "./subMesh.json"
            }
          },
          "subMeshMap": {
            "type": "object",
            "patternProperties": {
              "^.*$": {
                "$ref": "./subMesh.json"
              }
            }
          },
          "animationList": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string" },
                "file": {
                  "type": "string",
                  "pattern": "\\$((?:GAME_DATA|CONTENT_DATA|SURVIVAL_DATA|CHALLENGE_DATA|CONTENT_([0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12})))[\\\\\\/](?:[a-zA-Z0-9_]+[\\\\\\/])*([a-zA-Z0-9_.]+)"
                },
                "looping": { "type": "boolean" }
              }
            }
          }
        }
      }
    }
  }
}

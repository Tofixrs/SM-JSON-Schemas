{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "./shapeSet.json",
  "title": "shapeSet",
  "description": "",
  "type": "object",
  "definitions": {
    "objRatings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "density": { "type": "integer" },
        "durability": { "type": "integer" },
        "friction": { "type": "integer" },
        "buoyancy": { "type": "integer" }
      }
    },
    "objRestrictions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "destructable": { "type": "boolean" },
        "erasable": { "type": "boolean" },
        "buildable": { "type": "boolean" },
        "liftable": { "type": "boolean" },
        "convertibleToDynamic": { "type": "boolean" },
        "paintable": { "type": "boolean" },
        "usable": { "type": "boolean" },
        "connectable": { "type": "boolean" }
      }
    }
  },
  "properties": {
    "partList": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "destroyTime": { "type": "number" },
          "density": { "type": "number" },
          "name": { "type": "string" },
          "color": {
            "$ref": "./hexColor.json"
          },
          "box": {
            "$ref": "./vec3.json"
          },
          "cylinder": {
            "type": "object",
            "properties": {
              "diameter": { "type": "number" },
              "depth": { "type": "number" },
              "margin": { "type": "number" },
              "axis": { "enum": ["Y", "X", "Z"] }
            }
          },
          "hull": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" },
              "z": { "type": "number" },
              "col": { "type": "string" },
              "margin": { "type": "number" }
            }
          },
          "sphere": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "diameter": { "type": "number" }
            }
          },
          "scripted": {
            "additionalProperties": false,
            "type": "object",
            "properties": {
              "filename": {
                "$ref": "./smPath.json"
              },
              "classname": {
                "type": "string",
                "description": "The class that the game will inject all the callbacks and properties into"
              },
              "data": {
                "type": "object",
                "description": "Additional data provided to the script available under self.data"
              },
              "tag": {
                "type": "string",
                "description": "Used for https://scrapmechanicdocs.com/docs/Game-Script-Environment/Static-Functions/sm.cell#getinteractablesbytag"
              },
              "seat": {
                "$ref": "./steering.json"
              },
              "steering": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "steerAngle": { "type": "number" }
                }
              }
            },
            "required": ["filename", "classname"]
          },
          "rotationSet": {
            "enum": [
              "Default",
              "Lift",
              "PackingLamp",
              "PropFalseYNegY",
              "PropFull",
              "PropFullMinusNegY",
              "PropFullMinusNegZ",
              "PropFullMinusZ",
              "PropFullYmmNegYmm",
              "PropNegY",
              "PropNegYNegZ",
              "PropNegYX",
              "PropNegYXNegX",
              "PropNegYmZX",
              "PropNegYmmX",
              "PropNegZ",
              "PropX",
              "PropXNegZm",
              "PropXmm",
              "PropY",
              "PropYNegY",
              "PropYNegYZ",
              "PropYNegYZNegX",
              "PropYNegYZNegZ",
              "PropYNegYZX",
              "PropYNegZ",
              "PropYNegZXNegX",
              "PropYX",
              "PropYXmNegXm",
              "PropYZ",
              "PropYZNegX",
              "PropYZNegXm",
              "PropYZNegZNegX",
              "PropYZNegZX",
              "PropYZX",
              "PropYZXNegX",
              "PropYZXmNegXm",
              "PropYZm",
              "PropYZmNegZm",
              "PropYZmNegZmX",
              "PropYZmX",
              "PropYmNegYm",
              "PropYmNegYmX",
              "PropYmNegYmZ",
              "PropYmNegYmZX",
              "PropYmXm",
              "PropYmZ",
              "PropYmZX",
              "PropYmZm",
              "PropYmZmXm",
              "PropYmZmm",
              "PropYmm",
              "PropYmmNegYmm",
              "PropYmmNegYmmZ",
              "PropYmmZ",
              "PropYmmZm",
              "PropZ",
              "PropZNegY",
              "PropZNegZ",
              "PropZX",
              "PropZXNegX",
              "PropZY",
              "PropZYNegX",
              "PropZmX",
              "PropZmY",
              "PropZmYm",
              "PropZmmNegZmm",
              "PropZmmYm",
              "SquareBlock",
              "StaticY",
              "StaticYZX",
              "StaticYZmNegZmX",
              "StaticYmZX",
              "StaticYmZmNegXm",
              "StaticYmZmXm",
              "StaticYmmZmmXmm"
            ]
          },
          "seat": {
            "$ref": "./steering.json"
          },
          "sticky": { "type": "string" },
          "physicsMaterial": {
            "$ref": "./materials.json"
          },
          "ratings": { "$ref": "objRatings" },
          "flammable": { "type": "boolean" },
          "autoTool": {
            "type": "string",
            "format": "uuid"
          },
          "stackSize": { "type": "integer" },
          "restrictions": { "$ref": "objRestrictions" },
          "showInInventory": { "type": "boolean" },
          "renderable": {
            "oneOf": [
              { "type": "string" },
              {
                "$ref": "./rend.json"
              }
            ]
          },
          "characterShape": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "characterUuid": {
                "type": "string",
                "format": "uuid"
              },
              "placementSphereRadius": { "type": "number" }
            }
          },
          "spotlight": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "defaultLuminance": { "type": "number" },
              "effect": {
                "$ref": "./effect.json"
              }
            }
          },
          "spotLight": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "defaultLuminance": { "type": "number" },
              "effect": {
                "$ref": "./effect.json"
              }
            }
          },
          "itemStack": { "type": "object" },
          "consumable": { "type": "boolean" },
          "edible": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "hpGain": { "type": "number" },
              "foodGain": { "type": "number" },
              "waterGain": { "type": "number" }
            }
          },
          "carryItem": { "type": "boolean" },
          "pipe": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "extendable": { "type": "boolean" },
              "openings": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "side": {
                      "enum": ["+X", "-X", "+Y", "-Y", "+Z", "-Z", "Y"]
                    },
                    "x": { "type": "number" },
                    "y": { "type": "number" },
                    "z": { "type": "number" }
                  }
                }
              }
            }
          },
          "simpleInteractive": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "animationTime": { "type": "number" },
              "sustainedAudio": { "type": "string" }
            }
          },
          "harvest": { "type": "boolean" },
          "chest": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "slots": { "type": "integer" }
            }
          },
          "survivalSpring": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "length": { "type": "number" }
            }
          },
          "survivalThruster": { "type": "object" },
          "survivalSequence": { "type": "object" },
          "survivalSensor": { "type": "object" },
          "survivalPiston": { "type": "object" },
          "previewRotation": { "type": "array", "items": { "type": "number" } },
          "plantable": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "harvestable": {
                "type": "string",
                "format": "uuid"
              }
            }
          },
          "friction": { "type": "number" },
          "restitution": { "type": "number" },
          "harvestablePart": { "type": "boolean" },
          "button": { "type": "object" },
          "baseUuid": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string",
            "description": "man just stick to one fucking thing just fucking use name instead of this but sm devs use this shit for whatever reason just in one shapeSet"
          },
          "lever": { "type": "object" },
          "legacyId": { "type": "number", "deprecated": true },
          "preview": {
            "type": "object",
            "additionalProperties": false,
            "properties": { "effect": { "type": "string" } }
          },
          "logic": { "type": "object" },
          "timer": { "type": "object" },
          "tone": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "audio": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": { "event": { "type": "string" } }
                }
              }
            }
          },
          "piston": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "length": { "type": "number" },
              "defaultRange": { "type": "number" },
              "effect": { "type": "string" },
              "defaultSpeedLevel": { "type": "number" },
              "force": { "type": "number" },
              "speedLevels": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "speed": { "type": "number" }
                  }
                }
              }
            }
          },
          "qualityLevel": { "type": "number" },
          "bearing": { "type": "object" },
          "spring": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "length": { "type": "number" },
              "defaultStiffnessLevel": { "type": "number" },
              "stiffnessLevels": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "stiffness": { "type": "number" }
                  }
                }
              },
              "effect": { "type": "string" }
            }
          },
          "steering": {
            "$ref": "./steering.json"
          },
          "gasEngine": {
            "$ref": "./engine.json"
          },
          "electricEngine": {
            "$ref": "./engine.json"
          },
          "controller": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "effect": { "type": "string" }
            }
          },
          "sensor": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "onEffect": { "type": "string" },
              "offEffect": { "type": "string" }
            }
          },
          "radio": { "type": "object" },
          "thruster": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "levels": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "averageForce": { "type": "number" },
                    "forceVariation": { "type": "number" }
                  }
                }
              },
              "effect": { "type": "string" }
            }
          }
        }
      }
    },
    "blockList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "name": { "type": "string" },
          "dif": { 
            "$ref": "./smPath.json",
            "title": "path to DIF texture"
          },
          "asg": { 
            "$ref": "./smPath.json",
            "title": "path to ASG texture"
          },
          "nor": { 
            "$ref": "./smPath.json",
            "title": "path to NOR texture"
          },
          "tiling": {
             "type": "integer",
            "description": "Amount of blocks of Tiling the texture represents"
          },
          "color": { "$ref": "./hexColor.json" },
          "physicsMaterial": { "$ref": "./materials.json" },
          "ratings": { "$ref": "objRatings" },
          "friction": { "type": "number" },
          "flammable": { "type": "boolean" },
          "density": { "type": "number" },
          "qualityLevel": { "type": "number" },
          "restrictions": { "$ref": "objRestrictions" },
          "alpha": { "type": "boolean" },
          "glass": { "type": "boolean" },
          "max_stack_count": { "type": "integer" }
        }
      }
    }
  }
}

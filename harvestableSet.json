{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./harvestableSet.json",
  "title": "harvestableSet",
  "description": "",
  "type": "object",
  "properties": {
    "harvestableList": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "name": { "type": "string" },
          "showInEditor": { "type": "boolean" },
          "removable": { "type": "boolean" },
          "disableClutter": { "type": "boolean" },
          "destroyTime": { "type": "number" },
          "type": {
            "type": "string",
            "description": "Only used for https://scrapmechanicdocs.com/docs/Game-Script-Environment/Static-Functions/sm.ai/#getclosesttree"
          },
          "slope": { "enum": ["rotate"] },
          "col": { "$ref": "./smPath.json" },
          "col_box": { "$ref": "./vec3.json" },
          "size": { "type": "integer" },
          "color": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "$ref": "./hexColor.json"
                }
              },
              { "type": "string", "pattern": "^(?:[0-9a-fA-F]{2}){3,4}$" }
            ]
          },
          "physics": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "mass": { "type": "integer" },
              "material": {
                "$ref": "./materials.json"
              }
            }
          },
          "mass": { "type": "integer" },
          "material": {
            "$ref": "./materials.json"
          },
          "script": {
            "type": "object",
            "properties": {
              "file": {
                "$ref": "./smPath.json",
                "description": "Path to the script"
              },
              "class": {
                "type": "string",
                "description": "The class that the game will inject all the callbacks and properties into"
              },
              "data": {
                "type": "object",
                "description": "Additional data provided to the script available under self.data"
              }
            },
            "required": ["class", "file"]
          },
          "renderable": {
            "oneOf": [
              { "$ref": "./smPath.json" },
              { "$ref": "./rend.json" }
            ]
          },
          "collides": {
            "character": { "type": "boolean" },
            "body": { "type": "boolean" },
            "projectile": { "type": "boolean" },
            "melee": { "type": "boolean" }
          }
        }
      }
    }
  }
}
